@model Imdb.Web.ViewModels.Movies.ListAllMoviesViewModel
@{
    ViewData["Title"] = "Movies";
    var userId = this.User.GetId();
}

<h1 class="text-center">@ViewData["Title"]</h1>

<ul class="nav">
    <li class="nav-link font-weight-bold">Sort by: </li>
    <li class="nav-link">
        <a asp-area="" asp-controller="Movies" asp-action="All" asp-route-sorting="@ViewData["TitleSortParm"]" asp-route-page="@Model.CurrentPage">Title</a>
    </li>
    <li class="nav-link">
        <a asp-area="" asp-controller="Movies" asp-action="All" asp-route-sorting="@ViewData["ReleaseDateSortParm"]" asp-route-page="@Model.CurrentPage">Release date</a>
    </li>
    <li class="nav-link">
        <a asp-area="" asp-controller="Movies" asp-action="All" asp-route-sorting="@ViewData["RatingSortParm"]" asp-route-page="@Model.CurrentPage">Rating</a>
    </li>
</ul>
<br />
<div class="row">
    <div class="col col-md-8">
        @foreach (var movie in Model.Movies)
        {
            <div class="card">
                <div class="row align-items-center">
                    @if (movie.GeneralImageUrl.Contains(GlobalConstants.AmazonImage))
                    {
                        <div class="col-12 col-md-4"><img width="100%" height="191" src="@(movie.GeneralImageUrl)" sizes="(max-width: 660px) 100vw, 660px"></div>
                    }
                    else
                    {
                        <div class="col-12 col-md-4"><img width="100%" height="191" src="@(GlobalConstants.ReducedBaseDeliveryImageUrl + movie.GeneralImageUrl)" sizes="(max-width: 660px) 100vw, 660px"></div>
                    }
                    <div class="col-12 col-md-8">
                        <h3>@movie.Title</h3>
                        @if (movie.Rating == null)
                        {
                            movie.Rating = "0";
                        }
                        <p>Rating : @movie.Rating/10<i class="fas fa-star"></i></p>
                        @if (movie.ReleaseDate != null)
                        {
                            <p>Release date: @movie.ReleaseDate.Value.ToShortDateString()<i class="fas fa-calendar-alt"></i></p>
                        }
                        else
                        {
                            <p>Release date: Not announced</p>
                        }
                        <a class="btn btn-primary my-3" asp-controller="Movies" asp-action="ById" asp-route-id="@movie.Id">View movie</a>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-warning" asp-area="User" asp-controller="Watchlists" asp-action="Add" asp-route-userId="@userId" asp-route-movieId="@movie.Id"><i class="fas fa-star">Add to watchlist</i></a>
                        }
                    </div>
                </div>
            </div>
            <hr />
        }
    </div>
    <div class="col col-md-4">
        <vc:recommended></vc:recommended>
    </div>
</div>

<nav>
    <ul class="pagination">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area=""
                   asp-controller="Movies"
                   asp-action="All"
                   asp-route-sorting="@Model.CurrentSorting"
                   asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-area=""
                   asp-controller="Movies"
                   asp-action="All"
                   asp-route-sorting="@Model.CurrentSorting"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PageCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area=""
                   asp-controller="Movies"
                   asp-action="All"
                   asp-route-sorting="@Model.CurrentSorting"
                   asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>