@model Imdb.Web.ViewModels.Movies.ListAllMoviesViewModel
@{
    ViewData["Title"] = "View";
}

<h1 class="text-center">All</h1>

<div class="col-md-8">
    @foreach (var movie in Model.Movies)
    {
        <div class="card">
            <div class="row align-items-center">
                <div class="col-12 col-md-4"><img width="100%" alt="Grandfather with child" src="@(GlobalConstants.BaseDeliveryUrl + movie.GeneralImageUrl)" sizes="(max-width: 660px) 100vw, 660px"></div>
                <div class="col-12 col-md-8">
                    <h3>@movie.Title</h3>
                    @if (movie.Rating == null)
                    {
                        movie.Rating = 0;
                    }
                    <p>Rating : @movie.Rating/10<i class="fas fa-star"></i></p>
                    @if (movie.ReleaseDate != null)
                    {
                        <p>Release date: @movie.ReleaseDate.Value.ToShortDateString()<i class="fas fa-calendar-alt"></i></p>
                    }
                    else
                    {
                        <p>Release date: Not announced</p>
                    }
                    <a class="btn btn-primary my-3" asp-controller="Movies" asp-action="ById" asp-route-id="@movie.Id">View movie</a>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <a href="#"><i class="fas fa-star">Add to watchlist</i></a>
                    }
                </div>
            </div>
        </div>
        <hr/>
    }
</div>