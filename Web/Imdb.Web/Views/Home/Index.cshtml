@using Imdb.Common
@model Imdb.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
    var userId = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
</div>

<form asp-area="" asp-controller="Movies" asp-action="Results" method="get">
    <div class="row">
        <div class="col-12 col-md-1"></div>
        <div class="col-12 col-md-8">
            <input class="form-control" id="movieTitle" name="movieTitle" type="text" placeholder="Search" aria-label="Search">
        </div>
        <div class="col-12 col-md-2">
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<div class="text-center">
    <h3 class="display-4">Top Movies</h3>
</div>

<div class="text-center row">
    @foreach (var movie in Model.TopMovies)
    {
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@(GlobalConstants.BaseDeliveryUrl+movie.GeneralImageUrl)" width="300" height="200" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.ShortDescription</p>
                    <a asp-controller="Movies" asp-action="ById" asp-route-id="@movie.Id" class="btn btn-primary">View Movie</a>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <a asp-area="" asp-controller="Watchlists" asp-action="Add" asp-route-userId="@userId" asp-route-movieId="@movie.Id"><i class="fas fa-star">Add to watchlist</i></a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
    <script>
        $(document).ready(function () {
            $("#movieTitle").autocomplete({
                source: 'api/moviesApi/search'
            });
            $(".ui-helper-hidden-accessible").remove();
        });
    </script>
}