@using Imdb.Common
@model Imdb.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
    var userId = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
</div>

<div class="text-center">
    <h3 class="display-4">Top Movies</h3>
</div>

<div class="text-center row">
    @foreach (var movie in Model.TopMovies)
    {
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@(GlobalConstants.BaseDeliveryUrl+movie.GeneralImageUrl)" width="300" height="200" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.ShortDescription</p>
                    <a asp-controller="Movies" asp-action="ById" asp-route-id="@movie.Id" class="btn btn-primary">View Movie</a>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <a asp-area="" asp-controller="Watchlists" asp-action="Add" asp-route-userId="@userId" asp-route-movieId="@movie.Id"><i class="fas fa-star">Add to watchlist</i></a>
                    }
                </div>
            </div>
        </div>
    }
</div>

